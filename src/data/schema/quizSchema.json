{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "quizTitle": {
      "type": "string"
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "type": {
            "type": "string",
            "enum": ["SINGLE_CHOICE", "MULTIPLE_CHOICE", "TEXT"]
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string"
                },
                "nextQuestionId": {
                  "type": ["integer"]
                }
              },
              "required": ["text"]
            },
            "minItems": 1
          },
          "inputType": {
            "type": "string",
            "enum": ["text", "number"]
          },
          "nextQuestionId": {
            "type": ["integer", "null"]
          }
        },
        "required": ["id", "type"],
        "anyOf": [
          {
            "required": ["options"]
          },
          {
            "required": ["inputType"]
          },
          {
            "required": ["nextQuestionId"]
          }
        ]
      },
      "minItems": 1
    }
  },
  "required": ["quizTitle", "questions"]
}
